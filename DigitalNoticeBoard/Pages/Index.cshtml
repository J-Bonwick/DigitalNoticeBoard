@page "{displayID?}"
@model IndexModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DigitalNoticeBoard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CarouselStyleSheet.css" />
</head>
<body>
    <div id="carousel" class="carousel slide align-middle" data-ride="carousel" data-pause="false" data-interval="3000">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.NoticeAssignment.Count; i++)
            {
                if (Model.NoticeAssignment[i].NoticeDisplayID.ToString() == Model.displayID)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img class="d-block w-100" src="~/imageUpload/@Model.NoticeAssignment[i].Notice.NoticeImagePath" alt="First slide">
                    </div>
                }
            }
            @*<div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/image1.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/imag2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/image4.PNG" alt="Third slide">
                </div>*@
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

