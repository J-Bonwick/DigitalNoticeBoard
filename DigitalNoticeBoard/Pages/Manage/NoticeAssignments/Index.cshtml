@page
@model DigitalNoticeBoard.Pages.Manage.NoticeAssignments.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Manage/ManageLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NoticeAssignment[0].Notice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoticeAssignment[0].NoticeDisplay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.NoticeAssignment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Notice.NoticeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoticeDisplay.NoticeDisplayID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.NoticeAssignmentID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.NoticeAssignmentID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.NoticeAssignmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
