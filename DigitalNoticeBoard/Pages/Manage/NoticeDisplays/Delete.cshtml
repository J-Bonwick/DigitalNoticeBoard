@page
@model DigitalNoticeBoard.Pages.Manage.NoticeDisplays.DeleteModel

@{ ViewData["Title"] = "Delete Display";
    Layout = "~/Pages/Manage/ManageLayout.cshtml"; }

<div class="card">
    <div class="card-header">
        <h3 class="float-left">Are you sure you want to delete this display?</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoticeDisplay.NoticeDisplayName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoticeDisplay.NoticeDisplayName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoticeDisplay.NoticeDisplayInterval)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoticeDisplay.NoticeDisplayInterval)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoticeDisplay.NoticeDisplayTransitionType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoticeDisplay.NoticeDisplayTransitionType)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="NoticeDisplay.NoticeDisplayID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
</div>