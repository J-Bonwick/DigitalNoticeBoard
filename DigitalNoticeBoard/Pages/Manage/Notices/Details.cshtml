@page
@model DigitalNoticeBoard.Pages.Manage.Notices.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Manage/ManageLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="float-left">Notice Details</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Notice.NoticeName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Notice.NoticeName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Notice.NoticeStartDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Notice.NoticeStartDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Notice.NoticeStopDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Notice.NoticeStopDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Notice.NoticeImagePath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Notice.NoticeImagePath)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Notice.NoticeID">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
</div>